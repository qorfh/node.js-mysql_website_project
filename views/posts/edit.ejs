<!DOCTYPE html>
<html>
<head>
  <% include ../partials/head %>
</head>
<body>
  <% include ../partials/nav %>
  <div class="container post post-index">
    <% include ./partials/header%>

    <form class="post-form form-horizontal" action="/posts/<%= boards.id %>/edit" method="post">
    <div class="contentNew">
      <div class="newAuth">
        <span class="newBox">title</span>
        <input class="newTitle" type="text" name="title" placeholder="title" value="<%= boards.title %>">
      </div>

      <div class="newAuth">
        <span class="sBox">author</span>
        <span><%= currentUser.username %></span>
      </div>

    

    <div>
      <textarea id="editor1" name="description" placeholder="description">
        <%= boards.description %>
      </textarea>
    </div>
  

    <div class="showButtons">
      <a href="/posts" class="showBtn">Back</a>
      <input class="showBtn" type="submit" name="submit" value="등록">
    </div>
    
   </div>
 
  </form>
 </div>
    <script>
        CKEDITOR.replace('editor1',{
         filebrowserUploadUrl:'/upload',
         });
     </script>

</body>
</html>