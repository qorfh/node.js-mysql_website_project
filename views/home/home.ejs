<!DOCTYPE html>
<html>
<head>
	<% include ../partials/head %>
</head>
<body class="homebody">
	<% include ../partials/nav %>
	<div id="slideshow">
        <img alt="" src="./images/1.jpg">
        <img alt="" src="./images/2.jpg">
        <img alt="" src="./images/3.jpg">
        <img alt="" src="./images/4.jpg">
        <img alt="" src="./images/5.jpg">
    </div>
    
<script>
	 jQuery(function() {
	    var rolling_time = 4000;
	    var effect_time = 2000;
	 
	    var $slideshow = $("#slideshow > img");
	    $slideshow.not(":first").hide();
	 
	    setInterval(rolling, rolling_time);
	 
	    function rolling()
	    {
	        $visible_img = $slideshow.filter(":visible");
	        $visible_img.fadeOut(effect_time);
	 
	        $next_img = $visible_img.next();
	        if ($next_img.length === 0) {
	            $next_img = $slideshow.filter(":first");
	        }
	        $next_img.fadeIn(effect_time);
	    }
	});
</script>
</body>
</html>